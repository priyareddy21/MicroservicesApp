spring:
  cloud:
    gateway:
      routes:
        - id: OrderService
          uri: lb://OrderService
          predicates:
            - Path=/orders/**
        - id: UserService
          uri: lb://UserService
          predicates:
            - Path=/users/**


server:
  port: 8989
 
#to maek application as eureka client
eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: http://localhost:8761/eureka/
  instance:
    hostname: localhost   